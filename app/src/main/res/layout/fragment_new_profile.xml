<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/newProfileAddressCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter City" />
        <EditText
            android:id="@+id/newProfileAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Address" />



        <EditText
            android:id="@+id/newProfileFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter full name" />

        <RadioGroup
            android:id="@+id/genderRg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/genderMaleOpt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"/>
            <RadioButton
                android:id="@+id/genderFemaleOpt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"/>

            <RadioButton
                android:id="@+id/genderOtherOpt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other"/>
        </RadioGroup>

        <Button
            android:id="@+id/newProfileCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:text="Create Profile" />

        <Button
            android:id="@+id/newProfileBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="64dp"
            android:text="Back" />
    </LinearLayout>
</LinearLayout>